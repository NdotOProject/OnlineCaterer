@using OnlineCaterer.Web.Views.Shared.Components.BookNowButton;
@model OnlineCaterer.Web.Views.Shared.Layout.Components.Header.Partials.SliderPartial

<section class="slider_section">
    <div id="customCarousel1" class="carousel slide" data-bs-ride="carousel">
        <div class="carousel-inner">
        @{
            bool isFirst = true;
            foreach(var caterer in Model.Caterers)
            {
                <div class="carousel-item @if(isFirst)
                {
                    @Html.Raw("active")
                    isFirst = false;
                }">
                    <div class="container">
                        <div class="row">
                            <div class="col-md-7 col-lg-6 ">
                                <div class="detail-box">
                                    <h1>
                                        @caterer.Name
                                    </h1>
                                    <p>
                                        @caterer.IntroduceMessage
                                    </p>
                                    <partial name="./Components/BookNowButton/BookNowButton" model="new BookNowButton(caterer.UserId)" />
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            }
        }
        </div>
        <div class="container">
            <ol class="carousel-indicators">
                <li data-bs-target="#customCarousel1" data-bs-slide-to="0" class="active"></li>
                <li data-bs-target="#customCarousel1" data-bs-slide-to="1"></li>
                <li data-bs-target="#customCarousel1" data-bs-slide-to="2"></li>
            </ol>
        </div>
    </div>

    <button type="button"
        class="carousel-control-prev"
        data-bs-target="#customCarousel1"
        data-bs-slide="prev"
    >
        <span class="carousel-control-prev-icon" aria-hidden="true"></span>
        <span class="visually-hidden">
            Previous
        </span>
    </button>
    <button type="button"
        class="carousel-control-next"
        data-bs-target="#customCarousel1"
        data-bs-slide="next"
    >
        <span class="carousel-control-next-icon" aria-hidden="true"></span>
        <span class="visually-hidden">
            Next
        </span>
    </button>
</section>
