
<div class="header_area">
	<partial name="@(ManageLayoutComponents.HeaderBackground)" />
	@* Header Section *@
	<header class="header_section">
		<div class="container">
			@* Navbar *@
			<nav class="navbar navbar-expand-lg custom_nav-container row">
				@* Navbar Left Content*@
				<partial name="@(ManageLayoutComponents.NavLeft)" />
				@* End Navbar Left Content*@

				@* Navbar Middle & Right Content *@
				<div id="NavbarContent" class="collapse navbar-collapse col-lg-9 col-md-12 row">
					@* Navbar Middle Content *@
					<ul id="navbar-middle" class="navbar-nav mx-auto col-md-8">
						@* Home Link *@
						<li class="nav-item active">
							<a asp-controller="Home" asp-action="Index" class="nav-link">
								Home
								<span class="sr-only">
									(current)
								</span>
							</a>
						</li>
						@* End Home Link *@

						@* Caterer Link *@
						<li class="nav-item">
							<a asp-page="/Caterer/Index" class="nav-link">
								Caterers
							</a>
						</li>
						@* End Caterer Link *@

						@* Menu Link *@
						<li class="nav-item">
							<a asp-page="/Food/FoodIndex" class="nav-link">
								Menu
							</a>
						</li>
						@* End Menu Link *@

						@* About Link *@
						<li class="nav-item">
							<a asp-page="/Home/About" class="nav-link">
								About
							</a>
						</li>
						@* End About Link *@
					</ul>
					@* End Navbar Middle Content *@

					@* Navbar Right Content *@
					<div id="navbar-right" class="navbar-nav nav-user_options col-md-4">
						@* User Options *@
						<div class="row">
							@* Search Button *@
							<div class="col-md-2 option-box">
								<a id="search_option" class="user_option-icon">
									<partial name="Icons/fa-search-icon" />
									<div id="search_option-arrow" class="selected_option-arrow"></div>
								</a>
							</div>
							@* End Search Button *@

							@* User Options *@
							<div class="col-md-2 option-box">
								<a id="user_options" class="user_option-icon">
									<partial name="Icons/fa-user-icon" />
									<div id="user_options-arrow" class="selected_option-arrow"></div>
								</a>
							</div>
							@* End User Options *@

							@* Booking Option *@
							<div class="col-md-2 option-box">
								<a asp-page="/Auth/Booking/Index" class="user_option-icon">
									<partial name="Icons/fa-cart-shopping-icon" />
								</a>
							</div>
							@* End Booking Option *@

							@* Booking Button*@
							<a asp-page="/Auth/Customer/Booking/Create" class="booking-btn col-lg-6">
								<span>
									Book Now
								</span>
							</a>
							@* End Booking Button*@

							@* Selected Option Box *@
							<partial name="@(ManageLayoutComponents.SelectedOptionBox)" />
							@* End Selected Option Box *@
						</div>
						@* End User Options *@
					</div>
					@* End Navbar Right Content *@
				</div>
				@* End Navbar Middle & Right Content *@
			</nav>
			@* End Navbar *@
		</div>
	</header>
	@* End Header Section *@

	@* Slider Section *@
	@if ("Home Page".Equals(ViewData["Title"]))
	{
		<partial name="@(ManageLayoutComponents.SliderPartial)" />
	}
	@* End Slider Section *@
</div>
@* End Header *@