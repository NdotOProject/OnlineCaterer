@using Microsoft.AspNetCore.Identity;
@using OnlineCaterer.Data.Identity;

@inject UserManager<ApplicationUser> UserManager
@inject SignInManager<ApplicationUser> SignInManager


@* Header Section *@
<header class="header_section">

	<div class="container">
		
		@* Navbar *@
		<nav class="navbar navbar-expand-lg custom_nav-container row">

			@* Navbar Left Content*@
			<div class="col-lg-3 navbar-left_content">
				@* Brand & Home *@
				<a class="navbar-brand" asp-controller="Home" asp-action="Index">
					<span>
						Online Caterer
					</span>
				</a>
				@* End Brand & Home *@

				@* Collapse Button *@
				<button class="navbar-toggler" type="button"
					data-bs-toggle="collapse" data-bs-target="#NavbarContent"
					aria-controls="NavbarContent"
					aria-expanded="false" aria-label="Toggle navigation">
					<span class=""> </span>
				</button>
				@* End Collapse Button *@
			</div>
			@* End Navbar Left Content*@

			@* Navbar Content *@
			<div class="collapse navbar-collapse col-lg-9 col-md-12 row" id="NavbarContent">
				
				@* Navbar Middle Content *@
				@* Default Navbar Options *@
				<ul class="navbar-nav mx-auto col-md-8">

					@* Home Option *@
					<li class="nav-item active">
						<a class="nav-link" asp-controller="Home" asp-action="Index">
							Home
							<span class="sr-only">
								(current)
							</span>
						</a>
					</li>
					@* End Home Option *@

					@* Caterer Option *@
					<li class="nav-item">
						<a class="nav-link" asp-controller="Home" asp-action="Index">Caterers</a>
					</li>
					@* End Caterer Option *@

					@* About Option *@
					<li class="nav-item">
						<a class="nav-link" asp-controller="Home" asp-action="Index">About</a>
					</li>
					@* End About Option *@

					@* Booking Option *@
					<li class="nav-item">
						<a class="nav-link" asp-controller="Booking" asp-action="Index">Booking</a>
					</li>
					@* End Booking Option *@

				</ul>
				@* End Default Navbar Options *@
				@* End Navbar Middle Content *@

				@* Navbar User Options *@
				<div class="nav-user_options col-md-4">

					@* Default User Options *@
					<div class="row">

						@* Search Button *@
						<div class="col-md-2">
							<a id="search_option" class="user_option-icon">
								<svg xmlns="http://www.w3.org/2000/svg" height="1em" viewBox="0 0 512 512">
									<path d="M416 208c0 45.9-14.9 88.3-40 122.7L502.6 457.4c12.5 
										12.5 12.5 32.8 0 45.3s-32.8 12.5-45.3 0L330.7 376c-34.4 
										25.2-76.8 40-122.7 40C93.1 416 0 322.9 0 208S93.1 0 208 
										0S416 93.1 416 208zM208 352a144 144 0 1 0 0-288 144 144 0 1 0 0 288z"/>
								</svg>
							</a>
						</div>
						@* End Search Button *@

						@* User Options *@
						<div class="col-md-2">
							<a id="user_options" class="user_option-icon">
								<svg xmlns="http://www.w3.org/2000/svg" height="1em" viewBox="0 0 448 512">
									<path d="M224 256A128 128 0 1 0 224 0a128 128 0 1 0 0 256zm-45.7 48C79.8
										304 0 383.8 0 482.3C0 498.7 13.3 512 29.7 512H418.3c16.4 0 29.7-13.3
										29.7-29.7C448 383.8 368.2 304 269.7 304H178.3z" />
								</svg>
							</a>
						</div>
						@* End User Options *@

						@* Booking Option *@
						<div class="col-md-2">
							<a class="user_option-icon" asp-controller="Booking" asp-action="Index">
								<svg xmlns="http://www.w3.org/2000/svg" height="1em" viewBox="0 0 576 512">
									<path d="M0 24C0 10.7 10.7 0 24 0H69.5c22 0 41.5 12.8 50.6 32h411c26.3 0 45.5 25 
										38.6 50.4l-41 152.3c-8.5 31.4-37 53.3-69.5 53.3H170.7l5.4 28.5c2.2 11.3 12.1 
										19.5 23.6 19.5H488c13.3 0 24 10.7 24 24s-10.7 24-24 24H199.7c-34.6 0-64.3-24.6-70.7-58.5L77.4 
										54.5c-.7-3.8-4-6.5-7.9-6.5H24C10.7 48 0 37.3 0 24zM128 464a48 48 0 1 1 96 0 48 48 0 1 1 -96 
										0zm336-48a48 48 0 1 1 0 96 48 48 0 1 1 0-96z" />
								</svg>
							</a>
						</div>
						@* End Booking Option *@

						@* Booking Button*@
						<a class="booking-btn col-lg-6" asp-controller="Booking" asp-action="Create">
							<span>
								Book Now
							</span>
						</a>
						@* End Booking Button*@

						@* Selected Option Content *@
						<div id="selected_option-content">

							@* User Options Content *@
							<ul id="user_option-list" class="">

								@* IsSignIn = true *@
								@if (SignInManager.IsSignedIn(User))
								{
									<li class="user_option-item">
										<a>
											Profile
										</a>
									</li>
									<li class="user_option-item">
										<a>
											Logout
										</a>
									</li>
								}
								@* IsSignIn = false *@
								else
								{
									<li class="user_option-item">
										<a>
											Register
										</a>
									</li>
									<li class="user_option-item">
										<a>
											Login
										</a>
									</li>
								}

							</ul>
							@* End User Options Content *@

							<div id="search_option-box">
								<form method="post">

									<input type="text" placeholder="Enter supplier's name" />
									<button type="submit" class="nav_search-btn">
										<i class="fa fa-search" aria-hidden="true"></i>
									</button>

								</form>
								<a >More...</a>
							</div>

						</div>
						@* End Selected Option Content *@

					</div>
					@* End Default User Options *@

				</div>
				@* End Navbar User Options *@

			</div>
			@* End Navbar Content *@

		</nav>
		@* End Navbar *@

	</div>

</header>
@* End Header Section *@